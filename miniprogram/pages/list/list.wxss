.list-container{
  display: flex;
  flex-wrap: wrap;
  justify-content: left;
  flex-direction: row;
  margin-top: 30rpx;
}

.nav-container{
  margin-top: 20rpx;
  height: 200rpx;
  width:100%;
  display: flex;
  justify-content: space-around;
}
.nav-container .item{
  display: flex;
  flex-direction: column;
}
.nav-container .item view{
  width:100rpx;
  height:100rpx;
  background-color: red;
  border-radius: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
}
.nav-container .item .iconfont{
  color:#fff;
  font-size: 50rpx;
}
.nav-container .item text{
  font-size: 24rpx;
  text-align: center;
}
/* 线条未显示？ */
.nav-container::after{
  height: 2rpx;
  width:100%;
  background-color: #000;
}

.swiper{
  width: 96%;
  margin: 2%;
  border-radius: 20rpx;
}