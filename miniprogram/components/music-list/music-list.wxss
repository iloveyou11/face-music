.musiclist-index {
  color: #888;
  font-size: 30rpx;
  width: 70rpx;
  text-align: center;
}

.musiclist-info {
  flex-grow: 1;
  width: 0;
}

.musiclist-name {
  font-size: 34rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 10rpx;
}

.music-name{
  font-size: 26rpx;
}

.musiclist-alia {
  font-size: 26rpx;
  color: #888;
}

.musiclist-singer {
  font-size: 22rpx;
  color: #888;
}

.playing view, .playing text {
  color: #B03060;
}
